{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "开发氛围"
      }
    },
    {
      "path": "pages/news/index",
      "style": {
        "navigationBarTitleText": "新闻"
      }
    },
    {
      "path": "pages/moments/index",
      "style": {
        "navigationBarTitleText": "圈子"
      }
    },
    {
      "path": "pages/profile/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/article/index",
      "style": {
        "navigationBarTitleText": "文章详情"
      }
    }
  ],
  "tabBar": {
    "color": "#ffffff",
    "selectedColor": "#FFFFFF",
    "borderStyle": "black",
    "backgroundColor": "#002FA7",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/tabbar/home.png",
        "selectedIconPath": "static/tabbar/home.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/news/index",
        "iconPath": "static/tabbar/news.png",
        "selectedIconPath": "static/tabbar/news.png",
        "text": "新闻"
      },
      {
        "pagePath": "pages/moments/index",
        "iconPath": "static/tabbar/lens.png",
        "selectedIconPath": "static/tabbar/lens.png",
        "text": "圈子"
      },
      {
        "pagePath": "pages/profile/index",
        "iconPath": "static/tabbar/account.png",
        "selectedIconPath": "static/tabbar/account.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "开发氛围",
    "navigationBarBackgroundColor": "#002FA7",
    "backgroundColor": "#F8F8F8"
  }
}
